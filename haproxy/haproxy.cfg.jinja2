global
    maxconn 1000
    stats socket /var/lib/haproxy/stats mode 660 level admin

defaults
    log global
    mode tcp
    retries 2
    timeout client 30m
    timeout connect 4s
    timeout server 30m
    timeout check 5s

listen stats
    mode http
    bind *:7000
    stats enable
    stats uri /

listen master
    bind *:5000
    option httpchk GET /master
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    {% for server in servers %}
        server {{ server.name }} {{ server.host }}:{{ server.port }} maxconn 100 check port 8008
    {% else %}
        server postgresql_127.0.0.1_5432 127.0.0.1:5432 maxconn 100 check port 8008
    {% endfor %}

listen slave
    bind *:5001
    option httpchk GET /replica
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    {% for server in servers %}
        server {{ server.name }} {{ server.host }}:{{ server.port }} maxconn 100 check port 8008
    {% else %}
        server postgresql_127.0.0.1_5432 127.0.0.1:5432 maxconn 100 check port 8008
    {% endfor %}

